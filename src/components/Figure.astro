---
interface Props {
  caption?: string;
  width?: string;
}

const { caption, width } = Astro.props;
---

<figure
  class={`my-6 ${width ? "mx-auto figure-width" : ""}`}
  style={width ? `--figure-width: ${width}` : undefined}
>
  <slot />
  {
    caption && (
      <figcaption class="mt-2 text-center text-sm text-gray-600 italic dark:text-gray-400">
        {caption}
      </figcaption>
    )
  }
</figure>

<style>
  .figure-width {
    max-width: 100%;
  }

  @media (min-width: 420px) {
    .figure-width {
      max-width: var(--figure-width);
    }
  }
</style>
